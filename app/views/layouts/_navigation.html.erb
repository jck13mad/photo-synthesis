<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
    .w3-bar-block .w3-bar-item {padding:20px}
</style>

<% if logged_in? %>
    <nav class="w3-sidebar w3-bar-block w3-card w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidebar">
        <%= link_to 'All Plants', plants_path, onclick: "w3_close()", class: "w3-bar-item w3-button" %>
        <%= link_to 'Add Plant', new_plant_path, onclick: "w3_close()", class: "w3-bar-item w3-button" %>
        <%= link_to 'User Profile', user_path(current_user), onclick: "w3_close()", class: "w3-bar-item w3-button" %>
        <%= button_to 'Logout', logout_path, method: "delete", onclick: "w3_close()", class: "w3-bar-item w3-button" %>

        <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button">Close Menu</a>
    </nav>

    <div class="w3-top">
        <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
            <div class="w3-button w3-padding-16 w3-left" onclick="w3_open()">☰</div>
            <div class="w3-center w3-padding-16"><%= link_to 'Photo-Synthesis', root_path %></div>
        </div>
    </div>

<% end %>

<% if !logged_in? %>
    <div class="w3-top">
        <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
            <div class="w3-button w3-padding-16 w3-left" onclick="w3_open()">☰</div>
            <nav class="w3-sidebar w3-bar-block w3-card w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidebar">
                <%= link_to 'Login', login_path, onclick: "w3_close()", class: "w3-bar-item w3-button" %>
                <%= link_to 'Signup', signup_path, onclick: "w3_close()", class: "w3-bar-item w3-button" %>

                <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button">Close Menu</a>
            </nav>
            <div class="w3-center w3-padding-16"><%= link_to 'Photo-Synthesis', root_path %></div>
        </div>
    </div>
<% end %>